{% extends 'base.html.twig' %}

{% block title %}Modifier l'événement{% endblock %}

{% block body %}
    <h1>Modifier l'événement</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
    {{ form_end(form) }}

    <a href="{{ path('event_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>

    {% if is_granted('delete', event) %}
        <form method="post" action="{{ path('event_delete', {'id': event.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');" style="display: inline-block;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
            <button type="submit" class="btn btn-danger mt-3">Supprimer</button>
        </form>
    {% endif %}
{% endblock %}