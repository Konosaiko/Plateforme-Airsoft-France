{% extends 'base.html.twig' %}

{% block title %}New Post - {{ association.name }}{% endblock %}

{% block body %}
    <h1>Create New Post for {{ association.name }}</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary">Create Post</button>
    {{ form_end(form) }}

    <a href="{{ path('app_association_posts', {'id': association.id}) }}" class="btn btn-secondary mt-3">Back to Posts</a>
{% endblock %}